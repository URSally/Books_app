
    <header>
      <div class="flash"> <%= flash[:notice] %></div>
      <h1 class="headline"> Books </h1>
    </header>


<table>
<% @books.each do |book| %>
    <div class="book-comment">
      <span class="book-title"><%=link_to book.title, book_path(book.id) %></span>
      <span class="book-body"><%= book.body %></span>
      <span class="show"><%=link_to "show", book_path(book.id) %></span>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除してもよろしいですか？" %>
    </div>
<% end %>
</table>

<h1>新規投稿</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>